{
    "name": "songtxt",
    "displayName": "SongTxt",
    "description": "Adds support for editing text files for songs including lyrics, chords, guitar tablature, etc.",
    "version": "0.1.10",
    "publisher": "gusper",
    "author": {
        "name": "Gus Perez",
        "email": "gus@gusperez.com",
        "url": "http://gusperez.com"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/gusper/SongTxt-vscode"
    },
    "homepage": "https://github.com/gusper/SongTxt-vscode",
    "icon": "images/songtxt.png",
    "bugs": {
        "url": "https://github.com/gusper/SongTxt-vscode/issues",
        "email": "gus@gusperez.com"
    },
    "engines": {
        "vscode": "^1.103.0"
    },
    "categories": [
        "Other"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.enableSongtxt",
                "title": "Enable SongTxt",
                "category": "SongTxt"
            },
            {
                "command": "extension.disableSongtxt",
                "title": "Disable SongTxt",
                "category": "SongTxt"
            }
        ],
        "languages": [
            {
                "id": "songtxt",
                "aliases": [
                    "SongTxt",
                    "Songtxt"
                ],
                "extensions": [
                    ".txt",
                    ".tab"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "songtxt",
                "scopeName": "text.songtxt",
                "path": "./syntaxes/songtxt.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "songtxt",
                "path": "./snippets/songtxt.json"
            }
        ],
        "configurationDefaults": {
            "[songtxt]": {
                "editor.guides.indentation": false,
                "editor.occurrencesHighlight": "off"
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src/**/*.ts",
        "test": "mocha out/test/suite/grammar.test.js"
    },
    "devDependencies": {
        "@eslint/js": "^9.33.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "^24.3.0",
        "@types/vscode": "^1.103.0",
        "@typescript-eslint/eslint-plugin": "^8.40.0",
        "@typescript-eslint/parser": "^8.40.0",
        "eslint": "^9.33.0",
        "mocha": "^11.7.1",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.40.0"
    },
    "dependencies": {
        "braces": "^3.0.3"
    }
}
